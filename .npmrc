# Optimize npm for Render.com deployment
registry=https://registry.npmjs.org/
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Skip optional dependencies to speed up install
optional=false

# Use npm cache
cache=.npm-cache

# Skip audit for faster builds
audit=false

# Skip funding message
fund=false

# Skip update notification
update-notifier=false
